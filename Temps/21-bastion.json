{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {},
    "functions": [],
    "variables": {},
    "resources": [
     {
        "name": "app-network",
        "type": "Microsoft.Network/virtualNetworks",
        "apiVersion": "2023-04-01",
        "location": "[resourceGroup().location]",
        "tags": {
            "displayName": "app-network"
        },
        "properties": {
            "addressSpace": {
                "addressPrefixes": [
                    "10.0.0.0/16"
                ]
            },
            "subnets": [
                {
                    "name": "Subnet-1",
                    "properties": {
                        "addressPrefix": "10.0.0.0/24"
                    }
                },
                {
                    "name": "AzureBastionSubnet",
                    "properties": {
                        "addressPrefix": "10.0.1.0/24"
                    }
                }
            ]
        }
     },
   
     {
        "name": "bastion-ip",
        "type": "Microsoft.Network/publicIPAddresses",
        "apiVersion": "2023-04-01",
        "location": "[resourceGroup().location]",
        "sku" : 
        {
            "name": "Standard"
        },
        "properties": {
            
            "publicIPAllocationMethod": "Static"
            
        }
     },
     {
         "apiVersion": "2023-04-01",
         "type": "Microsoft.Network/bastionHosts",
         "name":"app-bastion",
         "location": "West US",
         "dependsOn": [
            "[resourceId('Microsoft.Network/virtualNetworks','app-network')]",
            "[resourceId('Microsoft.Network/publicIPAddresses','bastion-ip')]"
         ],
         "properties":{
            "ipConfigurations":[
                {
                    "name":"bastion-config",
                    "properties":{
                        "subnet":{
                            "id":"[resourceId('Microsoft.Network/virtualNetworks/subnets','app-network','AzureBastionSubnet')]"
                        },
                        "publicIPAddress": {
                            "id": "[resourceId('Microsoft.Network/publicIPAddresses','bastion-ip')]"
                        }

                    }

                }
            ]
         }
            
         
     }
     
    ],
    "outputs": {}
}